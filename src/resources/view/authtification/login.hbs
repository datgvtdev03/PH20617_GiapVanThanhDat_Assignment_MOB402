<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-5">
            <h1 style="margin-top: 20px; text-align: center;">Đăng nhập </h1>
            <form action="/authtification/login" method="POST">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Mời nhập gmail</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Mời nhập gmail" name="email" required>
                    {{#if errEmail}}
                    <p class="mt-3 text-center text-danger">Gmail không chính xác. Vui lòng thử lại.</p> <!-- Thông báo lỗi chưa đúng gmail -->
                    {{/if}}
                </div>
                <div class="mb-3">
                    <label for="inputPassword5" class="form-label">Mật khẩu</label>
                    <input type="password" id="inputPassword5" class="form-control" aria-labelledby="passwordHelpBlock" placeholder="Mời nhập mật khẩu" name="password" required>
                    {{#if errPass}}
                    <p class="mt-3 text-center text-danger">Mật khẩu không chính xác. Vui lòng thử lại.</p> <!-- Thông báo lỗi chưa đúng mật khẩu -->
                    {{/if}}
                    <div id="passwordHelpBlock" class="form-text">
                        Nhập độ dài mật khẩu từ 8 - 20 kí tự
                    </div>
                </div>
                <button type="submit" class="btn btn-success mt-4 text-center">Đăng nhập</button>
                <a class="btn mt-4 text-center text-info" href="/authtification/show2">Bạn chưa có tài khoản?</a>
            </form>
        </div>
    </div>
</div>
